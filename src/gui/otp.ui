<interface>
  <!-- interface-name otp.ui -->
  <requires lib="gtk" version="4.0"/>
  <object class="GtkWindow">
    <child>
      <object class="GtkGrid">
        <child>
          <object class="GtkGrid">
            <property name="row-spacing">16</property>
            <child>
              <object class="GtkButton">
                <property name="halign">center</property>
                <property name="height-request">64</property>
                <property name="label">Pick a file to be the key</property>
                <property name="margin-top">8</property>
                <property name="overflow">hidden</property>
                <layout>
                  <property name="column">0</property>
                  <property name="column-span">1</property>
                  <property name="row">0</property>
                  <property name="row-span">1</property>
                </layout>
              </object>
            </child>
            <child>
              <object class="GtkGrid">
                <child>
                  <object class="GtkCheckButton">
                    <property name="label">Delete key after use</property>
                    <layout>
                      <property name="column">0</property>
                      <property name="column-span">1</property>
                      <property name="row">0</property>
                      <property name="row-span">1</property>
                    </layout>
                  </object>
                </child>
                <child>
                  <object class="GtkCheckButton">
                    <property name="label">Use key as a seed</property>
                    <layout>
                      <property name="column">1</property>
                      <property name="column-span">1</property>
                      <property name="row">0</property>
                      <property name="row-span">1</property>
                    </layout>
                  </object>
                </child>
                <layout>
                  <property name="column">0</property>
                  <property name="column-span">1</property>
                  <property name="row">1</property>
                  <property name="row-span">1</property>
                </layout>
              </object>
            </child>
            <child>
              <object class="GtkLabel">
                <property name="halign">center</property>
                <property name="justify">center</property>
                <property name="label">otp is an encryption program
Copyright (C) 2026 NadnerbrendaN
Licensed under the MPL 2.0</property>
                <property name="margin-bottom">8</property>
                <property name="valign">end</property>
                <property name="vexpand">True</property>
                <layout>
                  <property name="column">0</property>
                  <property name="column-span">1</property>
                  <property name="row">2</property>
                  <property name="row-span">1</property>
                </layout>
              </object>
            </child>
            <layout>
              <property name="column">2</property>
              <property name="column-span">1</property>
              <property name="row">0</property>
              <property name="row-span">1</property>
            </layout>
          </object>
        </child>
        <child>
          <object class="GtkGrid">
            <child>
              <object class="GtkGrid">
                <child>
                  <object class="GtkSwitch">
                    <layout>
                      <property name="column">1</property>
                      <property name="column-span">1</property>
                      <property name="row">0</property>
                      <property name="row-span">1</property>
                    </layout>
                  </object>
                </child>
                <child>
                  <object class="GtkLabel">
                    <property name="label">Decrypt</property>
                    <property name="margin-end">8</property>
                    <property name="margin-start">8</property>
                    <layout>
                      <property name="column">0</property>
                      <property name="column-span">1</property>
                      <property name="row">0</property>
                      <property name="row-span">1</property>
                    </layout>
                  </object>
                </child>
                <child>
                  <object class="GtkLabel">
                    <property name="label">Encrypt</property>
                    <property name="margin-end">8</property>
                    <property name="margin-start">8</property>
                    <layout>
                      <property name="column">2</property>
                      <property name="column-span">1</property>
                      <property name="row">0</property>
                      <property name="row-span">1</property>
                    </layout>
                  </object>
                </child>
                <layout>
                  <property name="column">0</property>
                  <property name="column-span">1</property>
                  <property name="row">1</property>
                  <property name="row-span">1</property>
                </layout>
              </object>
            </child>
            <child>
              <object class="GtkButton">
                <property name="halign">center</property>
                <property name="label">Encrypt / Decrypt</property>
                <property name="margin-bottom">16</property>
                <property name="margin-top">8</property>
                <property name="valign">center</property>
                <layout>
                  <property name="column">0</property>
                  <property name="column-span">1</property>
                  <property name="row">0</property>
                  <property name="row-span">1</property>
                </layout>
              </object>
            </child>
            <layout>
              <property name="column">0</property>
              <property name="column-span">1</property>
              <property name="row">0</property>
              <property name="row-span">1</property>
            </layout>
          </object>
        </child>
        <child>
          <object class="GtkTextView">
            <property name="hexpand">True</property>
            <property name="vexpand">True</property>
            <property name="width-request">128</property>
            <layout>
              <property name="column">1</property>
              <property name="column-span">1</property>
              <property name="row">0</property>
              <property name="row-span">1</property>
            </layout>
          </object>
        </child>
      </object>
    </child>
  </object>
</interface>
